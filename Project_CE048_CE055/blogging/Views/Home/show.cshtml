@model blogging.viewmodel.storyViewModel
@{
    ViewData["Title"] = "show";
}


    <div class="container">
        <div class="row">
            <div class="col s12 m8">
                <h3>
                    @Model.title

                </h3>
                <div class="card story">
                    <div class="card-content">
                        <span class="card-title">@Model.createdat</span>
                        <span id="body-change">@Model.body</span>
                    </div>
                </div>
            </div>
            <div>
            <div class="col s12 m4" style="margin-top:85px;">
                <div class="card center-align">
                    <div class="card-content">
                        <span class="card-title">@Model.firstname @Model.lastname</span>
                        <img src="~/images/@Model.photopath" class="circle responsive-img img-small">
                    </div>
                    <div class="card-action">
                        <a href="/home/show_allstory_of_perticular_user/@Model.email">More From @Model.firstname @Model.lastname</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
